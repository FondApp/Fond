<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fond_teal_500</item>
        <item name="colorPrimaryDark">@color/fond_teal_700 </item>
        <item name="colorAccent">@color/fond_orange_700</item>
    </style>

    <style name="FondTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fond_teal_500</item>
        <item name="colorPrimaryDark">@color/fond_teal_700 </item>
        <item name="colorAccent">@color/fond_orange_700</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>